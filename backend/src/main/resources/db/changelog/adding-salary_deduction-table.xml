<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.7"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.7
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.7.xsd">


    <changeSet id="adding table SALARY_DEDUCTION" author="kseon">
        <createTable tableName="SALARY_DEDUCTION">
            <column name="ID" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="WORKER_ID" type="int">
                <constraints nullable="false" foreignKeyName="fk_salary_deduction_worker" references="WORKER(ID)"/>
            </column>
            <column name="CREATED_DATE" type="datetime"/>
            <column name="DEDUCTION_DATE" type="datetime"/>
            <column name="DEDUCTION" type="float(8,2)"/>
        </createTable>
    </changeSet>


    <changeSet id="adding column DEDUCTION_NOTE to SALARY_DEDUCTION table" author="kseon">
        <addColumn tableName="SALARY_DEDUCTION">
            <column name="DEDUCTION_NOTE" type="nvarchar(2000)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>